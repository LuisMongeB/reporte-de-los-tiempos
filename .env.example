# Required Settings
TELEGRAM_AGENT_TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_AGENT_OPENAI_API_KEY=sk-your_openai_key_here

# Optional Settings
TELEGRAM_AGENT_APP_NAME=Telegram AI Agent
TELEGRAM_AGENT_DEBUG=false
TELEGRAM_AGENT_LOG_LEVEL=INFO
TELEGRAM_AGENT_HOST=0.0.0.0
TELEGRAM_AGENT_PORT=8000

# Database
TELEGRAM_AGENT_DATABASE_URL=sqlite+aiosqlite:///./telegram_agent.db

# OpenAI Settings
TELEGRAM_AGENT_OPENAI_MODEL=gpt-4
TELEGRAM_AGENT_OPENAI_MAX_TOKENS=1000
TELEGRAM_AGENT_OPENAI_TEMPERATURE=0.7

# File Storage
TELEGRAM_AGENT_TEMP_DIR=./temp
TELEGRAM_AGENT_MAX_FILE_SIZE_MB=25

# Production Only
TELEGRAM_AGENT_TELEGRAM_WEBHOOK_SECRET=your_webhook_secret
TELEGRAM_AGENT_TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook

# Development Only
TELEGRAM_AGENT_NGROK_AUTH_TOKEN=your_ngrok_token